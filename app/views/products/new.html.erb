<h2>New product!</h2>

<%= form_tag '/products', method: :post do %>

<div>
 <%= label_tag :name %>
 <%= text_field_tag :name %>
</div>

<div>
 <%= label_tag :price %>
 <%= text_field_tag :price  %>
</div>

<div>
 <%= label_tag :description %>
 <%= text_field_tag :description  %>
</div>

<div>
 <%= label_tag :supplier_id %>
 <%= text_field_tag :supplier_id  %>
</div>

<%= submit_tag 'Make a new product' %>
<% end %>